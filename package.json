{
  "name": "search-agent",
  "version": "1.0.0",
  "description": "An AI-powered search agent using Electron and Playwright",
  "main": "dist/main.js",
  "scripts": {
    "start": "tsc && webpack && electron .",
    "dev": "tsc -w & webpack --watch & electron .",
    "build": "tsc && webpack && xcopy /S /I /Y src\\renderer\\*.html dist\\renderer\\ && xcopy /S /I /Y src\\renderer\\*.css dist\\renderer\\ && electron-builder",
    "test": "jest",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,json,html,css}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@playwright/test": "^1.51.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "electron": "^35.0.1",
    "electron-builder": "^25.1.8",
    "electron-reload": "^2.0.0-alpha.1",
    "eslint": "^9.22.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "path-browserify": "^1.0.1",
    "playwright": "^1.51.0",
    "prettier": "^3.5.3",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "ts-jest": "^29.2.6",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "util": "^0.12.5",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  }
}
